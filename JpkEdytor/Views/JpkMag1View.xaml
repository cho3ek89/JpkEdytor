<UserControl x:Class="JpkEdytor.Views.JpkMag1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JpkEdytor.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Descriptions.xaml" />
                <ResourceDictionary Source="../Resources/StylesAndTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <TabControl>
        <TabItem Header="Nagłówek">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <ContentControl Content="{Binding Jpk.Naglowek}" ContentTemplate="{StaticResource NaglowekTemplate}" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Podmiot">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ContentControl Grid.Row="0" Content="{Binding Jpk.Podmiot.IdentyfikatorPodmiotu}" ContentTemplate="{StaticResource IdOsobyNiefizycznejTemplate}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                    <ContentControl Grid.Row="1" Content="{Binding Jpk.Podmiot.AdresPodmiotu}" ContentTemplate="{StaticResource AdresTemplate}" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Magazyn">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Grid VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Style="{StaticResource LabelDefaultStyle}" 
                            Content="Magazyn:"/>
                    <TextBox Grid.Column="1" Width="300"
                            Style="{StaticResource TextBoxDefaultStyle}" 
                            Text="{Binding Jpk.Magazyn, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                    
                </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Przyjęcie z zewnątrz">
            <TabControl>
                <TabItem Header="Zestawienie dowodów">
                    <DataGrid
			            Style="{StaticResource DataGridStyle}"
			            ItemsSource="{Binding Path=Jpk.Pz.PzWartosc, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn CanUserSort="False" CanUserReorder="False" CanUserResize="False" Width="22" CellStyle="{StaticResource DeleteRowCellStyle}" CellTemplate="{StaticResource DeleteRowCellTemplate}"/>
                            <DataGridTextColumn Header="Numer" local:DataGridExtensions.HeaderToolTip="{StaticResource Mag1.Pz.PzWartosc.Numer}" 
                                        Binding="{Binding Numer, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                            <DataGridTemplateColumn Header="Data" local:DataGridExtensions.HeaderToolTip="{StaticResource Mag1.Pz.PzWartosc.Data}" SortMemberPath="Data" Width="{StaticResource DateTimeColFixedWidth}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Data, Mode=OneWay, StringFormat='yyyy-MM-dd'}" Style="{StaticResource TextBlockCellStyle}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding Data, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Style="{StaticResource DatePickerCellStyle}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Wartość" local:DataGridExtensions.HeaderToolTip="{StaticResource Mag1.Pz.PzWartosc.Wartosc}" 
                                        Binding="{Binding Wartosc, StringFormat='N2', Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                            <DataGridTemplateColumn Header="Data otrzymania" local:DataGridExtensions.HeaderToolTip="{StaticResource Mag1.Pz.PzWartosc.DataOtrzymania}" SortMemberPath="DataOtrzymania">
